@model CmsData.Registration.AskDropdown
@using CmsWeb
@using (var ci = Html.BeginCollectionItem(Model.Name))
{
	var listname = Html.NameFor2(m => m.list);
	<li class="type-@Model.Type">@Html.Raw(ci.hiddenindex)
        @Html.HiddenFor(m => m.Type)
		<span class="keyword big tip" title="Dropdown
    |This will be presented as a dropdown selection
    |Enters them in a smallgroup within the organization.
    |Optional Fee for the selection
    |Optional Limit which limits the number of people allowed for a selection
    |Optional DateTime which registers them in a meeting">
			Dropdown:
					<a class="delt" href="#"><img align="top" src="/Content/images/delete.gif" title="remove this item" /></a></span>
		<ul>
			<li><span class="keyword2">Label:</span> 
				@Html.TextBoxFor(m => m.Label, new { @class = "long" })
				<ul class="sort">
					@foreach(var item in Model.list)
					{
						item.Name = listname;
						@Html.EditorFor(m => item)
					}
				</ul>
				<div class="newitem"><a href="/Org/NewDropdownItem/@listname"><img src="/Content/images/plus1.png" alt="" /> Add Item</a></div>
			</li>
		</ul>
	</li>
}