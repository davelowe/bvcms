@using CmsWeb.Models.ExtraValues
@model NewExtraValueModel
<form id='extravalue-dialog' class='modal fade hide validate ajax form-horizontal' data-width='600'>
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>New Standard Extra Value</h3>
    </div>
    <div class="modal-body">
        <a class="helplink pull-right" target="_blank" href='@ExtraValueModel.HelpLink("NewExtraValue")'>help</a>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ExtraValueTable)
        @Html.HiddenFor(m => m.ExtraValueLocation)

        @Html.EditorFor(m => m.ExtraValueType, new { PlainSelect = true })
        @Html.EditorFor(m => m.ExtraValueName)
        @Html.EditorFor(m => m.VisibilityRoles, new { help = "Comma separated roles, blank is visible to all including MyData users, Access role excludes MyData users"})
        @Html.EditorFor(m => m.ExtraValueBitPrefix, new { hide = "hide", help = "Short (2-3 letter) abbreviation to prepend to each checkbox name" })
        @Html.EditorFor(m => m.ExtraValueCodes, "TextArea", new { hide = "hide", help = "Each code should be a short name on a separate line" })
        @Html.EditorFor(m => m.ExtraValueCheckboxes, "TextArea", new { hide = "hide", help = "Short names of each checkbox on separate lines. These will be prepended with the prefix and a -" })
        @if (ViewBag.Error != null)
        {
            <div id="StandardExtraValueError" class="alert">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <div>@Html.Raw(ViewBag.Error)</div>
            </div>
        }
    </div>
    <div class="modal-footer">
        <a class="btn" data-dismiss="modal">Cancel</a>
        <a href="/ExtraValue/SaveNewStandard" class="save btn btn-primary ajax" data-callback="StandardExtraValueDialogCallback">Save</a>
    </div>
</form>
