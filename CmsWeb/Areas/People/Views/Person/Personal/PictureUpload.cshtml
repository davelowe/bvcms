@model CmsWeb.Areas.People.Models.PersonModel
@using (Html.BeginForm("UploadPicture", "Person", new { id = Model.PeopleId }, FormMethod.Post, 
    new {enctype = "multipart/form-data", @class = "modal hide fade", id = "picture-modal"}))
{
    <div class="modal-header">
        <button class="close" data-dismiss="modal" type="button" aria-hidden="true"><i class="icon-remove-sign"></i></button>
        <h3>Photo</h3>
    </div>
    <div class="modal-body">
        <a href="@Model.Picture.LargeUrl" target="_blank"><img src="@Model.Picture.SmallUrl" alt=""> View full image</a>
        <fieldset class="">
            <label>Upload new photo</label>
            <input type="file" name="picture">
        </fieldset>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
        <input type="submit" class="btn btn-default btn-primary" value="Save changes" />
    </div>
}