@model dynamic
<form id="get-extra-value" class="modal fade hide dialog-options validate" method="POST">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">x</a>
        <h3 class="title">Extra Value</h3>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label class="control-label">Field</label>
            <input name="field" type="text" data-rule-required="true" />
        </div>
        <div class="form-group">
            <label class="control-label">Value</label>
            <input name="value" type="text" data-rule-required="true" />
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-success" data-dismiss="modal">Close</a>
        <input type="submit" class="btn btn-default btn-primary" value="OK" />
    </div>
</form>

