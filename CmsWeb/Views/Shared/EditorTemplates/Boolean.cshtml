@model bool
<div class="control-group @ViewBag.hide">
    @if (((string) ViewBag.label).HasValue())
    {
        @Html.LabelFor(m => m, ((string)ViewBag.label), new {@class = "control-label"})
    }
    else
    {
        @Html.LabelFor(m => m, new {@class = "control-label"})
    }
    <div class="controls">
        @Html.CheckBoxFor(m => m)
    </div>
</div>
