@model CmsWeb.Areas.People.Models.AddressInfo
<div class="modal-header">
    <a class="close" data-dismiss="modal">x</a>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#" data-toggle="tab"><b>@Model.Display Address</b></a></li>
        <li><a id="otheraddress" href="#" class="ajax" data-toggle="tab" data-link="/Address/Edit/@Model.OtherName/@Model.PeopleId">Edit @Model.OtherDisplay Address</a></li>
    </ul>
</div>
<div class="modal-body">
    <fieldset class="display">
        @Html.HiddenFor(m => m.PeopleId)
        @Html.HiddenFor(m => m.Name)
        @Html.EditorFor(m => m.AddressLineOne)
        @Html.EditorFor(m => m.AddressLineTwo)
        @Html.EditorFor(m => m.CityName)
        @Html.EditorFor(m => m.StateCode)
        @Html.EditorFor(m => m.Country)
        @Html.EditorFor(m => m.ZipCode)
        @Html.EditorFor(m => m.ResCode)
        @Html.EditorFor(m => m.FromDt)
        @Html.EditorFor(m => m.ToDt)
        @(Model.Preferred ? Html.DisplayFor(m => m.Preferred) : Html.EditorFor(m => m.Preferred))
    </fieldset>
    @Html.Raw(Model.Error)
</div>
<div class="modal-footer">
    <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
    @if (!Model.IsValid && Model.ResultNotFound)
    {
        <a href="/Address/ForceSave" class="btn btn-default btn-danger ajax">Use this Address Anyway</a>
    }
    <a href="/Address/Update" class="btn btn-default btn-primary ajax">Submit</a>
</div>
