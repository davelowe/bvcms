@using CmsWeb.Models
@using CmsWeb
@model SearchUsersModel
@Html.Hidden("topid0", Model.topid)
<form>
    @Html.Hidden("topid", Model.topid)
    @Html.Hidden("ordered", Model.ordered)
    @Html.Hidden("singlemode", Model.singlemode)
    <div>
        <div>
            <div>
                <input id="searchname" name="name" type="text" title="Starting letters of First&lt;space>Last or just Last" class="col-md-2 search-query">
                <a href="/SearchUsers/Results" type="submit" class="search bt">Search</a>
                <a href="/SearchUsers/Results" type="submit" class="newsearch bt">Clear</a>
            </div>
        </div>
    </div>
    <div style="overflow-y: auto;max-height: 400px">
@Html.Partial("Results", Model)
    </div>
    <div style="float:right;margin-top:1em;">
        <button class="UpdateSelected blue bt">Save changes</button>
    </div>
</form>